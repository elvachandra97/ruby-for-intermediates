<html>
   <head>
      <title>Item List</title>
   </head>

   <body>
      <h1>List of Items</h1>
      <table>
         <thead>
            <tr>
               <th>Name</th>
               <th>Price</th>
               <th colspan="3"></th>
            </tr>
         </thead>

         <tbody>
            <% items.each do |item| %>
               <tr>
                  <th>Name</th>
                  <th>Price</th>
                  <th colspan="3"></th>
               </tr>
            <% end %>
            <a href="/items/new">New Item</a>
         </tbody>
      </table>
   </body>
</html>